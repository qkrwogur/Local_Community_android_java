<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/blak_list_img">



    <TextView
        android:id="@+id/main_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        android:text="무야호~~~~~~~~~"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/main_list_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@+id/main_list_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="달이 떴다고 전화를 주시다니요.이 밤 너무 신나고 근사해요."
        android:layout_margin="10dp"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/main_list_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@+id/main_list_content"
        android:text="방금"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textStyle="bold"
        android:textColor="@color/white"


        />

    <ImageView
        android:id="@+id/list_like"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"

        android:scaleType="centerCrop"

        android:src="@drawable/heart"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintRight_toLeftOf="@+id/main_list_like_number" />

    <TextView
        android:id="@+id/main_list_like_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="8dp"
        android:text="5"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/list_comment"
        android:layout_marginRight="10dp"/>

    <ImageView
        android:id="@+id/list_comment"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"

        android:scaleType="centerCrop"

        android:src="@drawable/comment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/list_comment_number" />

    <TextView
        android:id="@+id/list_comment_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="8dp"
        android:text="5"
        android:textColor="@color/white"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
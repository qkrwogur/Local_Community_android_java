<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".Detail"
    android:background="@color/black"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:text="카드를 주었습니다.\n\n동네 마트 앞에 있었어요.\n\n마트에 맡겼어요."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:src="@drawable/missing_card" />

    <LinearLayout
        android:id="@+id/detail_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/main_list_like"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="344dp"
            android:background="@color/black"
            />

        <TextView
            android:layout_width="20sp"
            android:layout_height="50sp"
            android:layout_marginLeft="5dp"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="20dp"
            />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/main_list_comment"
            tools:layout_editor_absoluteX="197dp"
            tools:layout_editor_absoluteY="165dp"
            android:background="@color/black"
            />

        <TextView
            android:layout_width="20sp"
            android:layout_height="50sp"
            android:layout_marginLeft="5dp"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/button"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:text="수정"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="#00ff0000"
            android:layout_marginLeft="100dp"
            tools:layout_editor_absoluteX="75dp"
            tools:layout_editor_absoluteY="288dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:text="삭제"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="#00ff0000"
            tools:layout_editor_absoluteX="183dp"
            tools:layout_editor_absoluteY="286dp" />

    </LinearLayout>

    <ListView
        android:id="@+id/detail_listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_linearLayout"

        tools:listitem="@layout/detail_list"
        />

</androidx.constraintlayout.widget.ConstraintLayout>